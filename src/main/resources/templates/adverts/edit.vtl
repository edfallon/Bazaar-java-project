<h2 class="pageHeader" xmlns:th="http://www.w3.org/1999/xhtml">Edit Advert</h2>

<form action="/advert/$advert.getId()" method="post">

    <label for="category">Category:</label>
    <select name="category" id="category">
        #foreach($category in $categories)
        <option value="$category">$category.getValue()</option>
        #end
    </select>

    <label for="title">Title</label>
    <input type="text" name="title" required="true" class="inputbox" id="title" value="$advert.getTitle()">

    <label for="description">Description:</label>
    <input type="text" name="description" required="true" class="inputbox" id="description" value="$advert.getDescription()">

    <label for="photo">Add Photo URL:</label>
    <input type="text" id="photo" name="photo" required="true" class="inputbox" value="$advert.getPhotourl()">

    <label for="price">Price:</label>
    <input type="number" name="price" required="true" class="inputbox" id="price" value="$advert.getPrice()">

    <label for="location">Location:</label>
    <input type="text" name="location" required="true" class="inputbox" id="location" value="$advert.getLocation()">

    <input type="submit" value="Save" class="button">
</form>
